{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"allowJs": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"experimentalDecorators": true, // 支持装饰器
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"suppressImplicitAnyIndexErrors": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["./src/**/*.ts","./src/**/*.d.ts","./src/**/*.tsx"],
	"exclude": [
		"dist",
		"node_modules",
		"public"
	]
}
